package demo;

import java.util.Scanner;

public class DemoTranslation {
	public static void main(String[] args) {
	public final static Scanner STDIN_SCANNER = new Scanner(System.in);
		float s, p, c; //s= selling price, p= profit, c= cost price

		System.out.print("Enter the selling price of 15 items: ");
		s = STDIN_SCANNER.nextFloat();
		System.out.print("Enter the profit on 15 items: ");
		p = STDIN_SCANNER.nextFloat();

		//code to calculate cost of an item 'cost price = (selling price - profit)/15'
		c = (s - p) / 15;

		System.out.printf("\nThe cost price of an item is %.2f.", c);
	}

	//public final static Scanner STDIN_SCANNER = new Scanner(System.in);
}